<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="5dp" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp" >

            <Button
                android:id="@+id/datamain_backup_db"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/btn_update"
                android:gravity="center"
                android:text="@string/label_backup_db" />

            <Button
                android:id="@+id/datamain_restore_db"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/btn_back"
                android:gravity="center"
                android:text="@string/label_restore_db" />

            <Button
                android:id="@+id/datamain_backup_db_google"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/btn_update"
                android:gravity="center"
                android:text="@string/label_backup_db_google" />

            <Button
                android:id="@+id/datamain_restore_db_google"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/btn_back"
                android:gravity="center"
                android:text="@string/label_restore_db_google" />

            <Button
                android:id="@+id/datamain_export_csv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/btn_export"
                android:gravity="center"
                android:text="@string/label_export_csv" />

            <Button
                android:id="@+id/datamain_share_csv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/btn_share"
                android:gravity="center"
                android:text="@string/label_share_csv" />

            <Button
                android:id="@+id/datamain_create_default"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/btn_defdata"
                android:gravity="center"
                android:text="@string/label_create_default" >
            </Button>

            <Button
                android:id="@+id/datamain_import_csv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/btn_import"
                android:gravity="center"
                android:text="@string/label_import_csv" >
            </Button>

            <Button
                android:id="@+id/datamain_reset"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/btn_reset"
                android:gravity="center"
                android:text="@string/label_reset" />

            <Button
                android:id="@+id/datamain_clear_folder"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/btn_reset"
                android:gravity="center"
                android:text="@string/label_clear_folder" />

            <Button
                android:id="@+id/datamain_restore_db_from_dm"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/btn_back"
                android:gravity="center"
                android:text="@string/label_restore_db_from_dm" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>